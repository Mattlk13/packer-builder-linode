{
  "variables": {
    "personal_access_token": "{{env `LINODE_TOKEN`}}",
    "root_pass": "{{env `ROOT_PASSWORD`}}"
  },
  "builders": [
    {
      "type": "linode",

      "personal_access_token": "{{user `personal_access_token`}}",
      "instance_type": "g6-standard-2",
      "image": "linode/opensuse15.0",
      "region": "us-central",
      "root_pass": "{{user `root_pass`}}",
      "label": "My_Fancy_Image",

      "ssh_timeout": "1h",
      "ssh_username": "root",
      "ssh_password": "{{user `root_pass`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["echo Hello > /root/message.txt"]
    }
  ]
}
